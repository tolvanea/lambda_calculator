# Logic operators
true = λab.a
false = λab.b
and = λxy.(x y false)

# Numbers
0 = λzx.x
1 = λax.(a x)
2 = λbx.(b (b x))
3 = λcz.(c (c (c z)))

# +1, -1
+1 = λndx.(d (n d x))
-1 = λnfx.(n λgh.(h (g f)) (λu.x) (λu.u))

# Arithmetic
+ = λnmfx.((n f) (m f x))
* = λnmf.(m (n f))
^ = λnm.(n m)


# Recursion magic
u = λxy.(y (x x y)) # square root of Y combinator

if_0 = λn.((n λa.false) true)

frac = λfn.(if_0 n 1 (* n (f (-1 n))))
! = (u u frac)

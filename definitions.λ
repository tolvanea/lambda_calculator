# Logic operators
let true = λab.a
let false = λab.b
let and = λxy.(x y false)

# Numbers
let 0 = λzx.x
let 1 = λax.(a x)
let 2 = λbx.(b (b x))
let 3 = λcz.(c (c (c z)))

# Arithmetic
let + = λnmfx.((n f) (m f x))
let * = λnmf.(m (n f))
let ^ = λnm.(n m)

# +1, -1
let +1 = λndx.(d (n d x))
let -1 = λnfx.(n λgh.(h (g f)) (λu.x) (λu.u))

# Recursion magic
let u = λxy.(y (x x y)) # square root of Y combinator

let if_0 = λn.((n λa.false) true)

let frac = λfn.(if_0 n 1 (* n (f (-1 n))))
let ! = (u u frac)
